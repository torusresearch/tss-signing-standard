{
    "compilerOptions": {
      "rootDir": ".",
      "baseUrl": ".",
      "moduleResolution": "node",
      "strict": false,
      "module": "CommonJS",
      "target": "es2020",
      "lib": ["ES2020", "DOM"],
      "sourceMap": true,
      "esModuleInterop": true,
      "noImplicitThis": true,
      "outDir": "./dist",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    }
  }
  